  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "celo-composer",
    "celo"
  ],
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "turbo": "^2.0.5"
  },
  "packageManager": "pnpm@9.2.0",
  "dependencies": {
    "hardhat": "^2.19.1"
