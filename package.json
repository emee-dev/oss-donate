{
  "name": "oss-donate",
  "version": "1.0.0",
  "description": "Custom Celo Composer project.",
  "private": true,
  "author": "Emmanuel Ajike",
  "license": "MIT",
  "scripts": {
    "frontend:dev": "turbo run dev --filter frontend",
    "frontend:build": "turbo run build --filter frontend",
    "frontend:start": "turbo run start --filter frontend",
    "frontend:lint": "turbo run lint --filter frontend",
    "hardhat:compile": "turbo run compile --filter hardhat",
    "hardhat:localhost": "turbo run dev --filter hardhat",
    "deploy:local": "turbo run deploy:local --filter hardhat",
    "deploy:alfajores": "turbo run deploy:alfajores --filter hardhat",
    "deploy:mainnet": "turbo run deploy:mainnet --filter hardhat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celo-org/celo-composer.git"
  },
  "bugs": {
